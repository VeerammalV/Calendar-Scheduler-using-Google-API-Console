<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCalendarView">
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
    </style>

    <style name="CustomDateTextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:state_selected">@android:color/black</item>
        <item name="android:state_focused">@android:color/white</item>
        <item name="android:state_pressed">@color/blue</item>
        <item name="android:state_hovered">@color/blue</item>
    </style>

</resources>
