<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/calendarFragment"
    tools:context=".chatroom.calendar.CalendarFragment"
    tools:ignore="MissingClass">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.5"
        app:mcv_calendarMode="month"
        app:mcv_dateTextAppearance="@style/CalendarDateTextStyle"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_headerTextAppearance="@style/CalendarTitleTextStyle"
        app:mcv_selectionColor="@color/blue"
        app:mcv_selectionMode="single"
        app:mcv_showOtherDates="defaults"
        app:mcv_showWeekDays="true"
        app:mcv_weekDayTextAppearance="@style/CalendarWeekDayTextStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>